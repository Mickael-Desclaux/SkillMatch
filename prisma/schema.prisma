generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Freelance {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  skills    String[]
  dailyRate Int      @map("daily_rate")

  @@map("freelance")
}

model Company {
  id       Int    @id @default(autoincrement())
  name     String
  industry String

  projects Project[]

  @@map("company")
}

model Project {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  requestedSkills String[] @map("requested_skills")
  maxDailyRate    Int      @map("max_daily_rate")
  companyId       Int      @map("company_id")
  freelanceId     Int?     @map("freelance_id")

  company Company @relation(fields: [companyId], references: [id])
}
